---
- name: Setup Slave for Jenkins Jobs
  hosts: slave
  become: true
  
  tasks:
  - name: Install httpd on web server
    yum: 
      name: 
      - git
      - java-1.8.0-openjdk-devel
      - docker
      state: present
  - name: start the httpd service
    service:
      name: docker
      state: started
